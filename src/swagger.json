{
  "openapi": "3.0.0",
  "info": {
    "title": "API paper-notes",
    "description": "Essa API tem como objetivo o cadastro de notas para usuários",
    "contact": {
      "email": "alexandreretamero@gmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "API de test"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Registro de usuário",
        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "John Doe",
                    "email": "john_doe@email.com",
                    "password": "Senha#123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login de usuário",
        "description": "Essa rota será responsável por logar um usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "john_doe@email.com",
                    "password": "Senha#123"
                  }
                }
              }
            },
            "examples": {
              "user": {
                "value": {
                  "email": "john_doe@email.com",
                  "password": "Senha#123"
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "200": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notes": {
      "post": {
        "summary": "Cadastro de uma nota",
        "description": "Essa rota será responsável por cadastrar uma nota",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "note": {
                  "value": {
                    "title": "Uma nota",
                    "body": "descrição da nota"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Note"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Buscar notas",
        "description": "Essa rota será responsável por buscar todas as notas de um usuário",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "201": {
            "description": "Index",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Note"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notes/search": {
      "get": {
        "summary": "Procurar notas",
        "description": "Essa rota será responsável por procurar as notas por uma query, a busca será feita por title ou body",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Title ou Body para busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "200": {
            "description": "Search",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Note"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notes/{id}": {
      "get": {
        "summary": "Buscar nota por id",
        "description": "Essa rota será responsável por buscar uma nota por id",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da nota para busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "200": {
            "description": "Show",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Note"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Atualizar nota por id",
        "description": "Essa rota será responsável por atualizar uma nota por id",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "note": {
                  "value": {
                    "title": "Uma nota",
                    "body": "descrição da nota"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da nota para atualização",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "200": {
            "description": "Update",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Note"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta nota por id",
        "description": "Essa rota será responsável por apagar uma nota por id",
        "tags": ["Notes"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID da nota para exclusão",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "BadRequest"
          },
          "200": {
            "description": "Delete",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Note"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Note": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "body": {
            "type": "string"
          },
          "author": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
